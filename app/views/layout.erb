  <head>
    <meta charset="utf-8" />

    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>RecipeBox</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.5/css/bulma.min.css">
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <!--script src="https://kit.fontawesome.com/e02f75e599.js" crossorigin="anonymous"></script-->
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
  </head>
  <body>
    <!-- Navigation Bar -->
    <% if logged_in? %>
      <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="topnav">
          <ul>
            <li style="float:left"><a href="/recipes">Recipe Box</a></li>
            <li>
              <form class="search-box" method="get" action="/search">
                <input class="search-txt" type="text" name="search" placeholder="Type to search">
                <button type="submit" class="search-btn"><i class="fas fa-search"></i></button>
              </form>
            </li>
            <li style="float:right"><a href="/logout">Log Out</a></li>
            <li style="float:right"><a href="/recipes/new">New Recipe</a></li>
            <li style="float:right"><a href="/users/<%= current_user.slug %>"><%= current_user.display_name %>'s Recipes</a></li>
          </ul>
        </div>
      </nav>
    <% end %>

    <div class="wrapper">
      <!-- Display validation messages -->
      <center><%= styled_flash %></center>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2019 <strong>RecipeBox</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
