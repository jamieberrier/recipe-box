  <head>
    <meta charset="utf-8" />

    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>RecipeBox</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.5/css/bulma.min.css">
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <!--script src="https://kit.fontawesome.com/e02f75e599.js" crossorigin="anonymous"></script-->
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
  </head>
  <body>
    <% if logged_in? %>
      <nav class="navbar is-fixed-top is-dark" role="navigation">
        <div class="navbar-brand">
          <a class="navbar-item" href="/recipes">Recipe Box</a>

          <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
        </div>
        <div class="navbar-menu">
          <div class="navbar-start">
            <a class="navbar-item is-tab">
              <div class="field has-addons">
                <form class="" method="get" action="/search">
                  <div class="control">
                    <input class="input" type="text" placeholder="Type to search">
                  </div>
                  <div class="control">
                    <a class="button" type="submit"><i class="fas fa-search"></i></a>
                  </div>
                </form>
              </div>
            </a>
          </div>
          <div class="navbar-end">
            <a class="navbar-item is-tab" href="/recipes/new">New Recipe</a>
            <a class="navbar-item is-tab" href="/users/<%= current_user.slug %>"><%= current_user.display_name %>'s Recipes</a>
            <a class="navbar-item is-tab" href="/logout">Log Out</a>
          </div>
        </div>
      </nav>
    <% end %>

    <div class="wrapper">

      <center><%= styled_flash %></center>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2019 <strong>RecipeBox</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
