<h1><%= @recipe.name %></h1>
<center>
  <% if !@recipe.description.blank? %>
    <p>Description: <%= @recipe.description %></p>
  <% end %>

  <p>Course: <%= @recipe.course %></p>

  <% if !authorized_to_edit?(@recipe) %>
    <p>By: <a href="/users/<%= @recipe.user.id %>"><%= @recipe.user.display_name %></a></p>
  <% end %>
</center>

<% if !@recipe.image_url.blank? %>
  <div class="recipe">
    <br>
    <img src="<%= @recipe.image_url %>" alt="<%= @recipe.name %> photo" height="300" width="400"><br>
  </div>
<% end %>

<h2>Ingredients</h2>
<% @recipe.recipe_ingredients.each do |ingredient| %>
  <% i = Ingredient.find(ingredient.ingredient_id) %>
  <%= i.name %> -- <%= ingredient.ingredient_amount %>
  <br>
<% end %>
<br>
<h2>Instructions</h2>
<div style="white-space: pre-wrap;"><%= @recipe.instructions %></div>
<br><br>

<% if authorized_to_edit?(@recipe) %>
  <form class="" action="/recipes/<%= @recipe.id %>/edit" method="get">
    <input type="submit" name="" value="Edit This Recipe">
  </form>
  <br>
  <form class="" action="/recipes/<%= @recipe.id %>/delete" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" name="" value="Delete This Recipe">
  </form>
 <% end %>
