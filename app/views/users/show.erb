<h3>Hello, <%= @user.display_name %>!</h3>

<% @user.recipes.each do |recipe| %>
  <a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a><br>
  <% if !recipe.image_url.blank? %>
    <img src="<%= recipe.image_url %>" alt="<%= recipe.name %> photo" height="100" width="100"><br>
  <% end %>
  Description: <%= recipe.description %><br>
  <% #binding.pry %>
  <strong><%= recipe.created_at.strftime("Created on %m/%d/%Y at %I:%M %p") %></strong>
  <br><br>
<% end %>
